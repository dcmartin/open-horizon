{
  "org": "${HZN_ORG_ID}",
  "label": "cpu",
  "description": "Provides hardware abstraction layer as service",
  "documentation": "https://github.com/dcmartin/open-horizon/blob/master/services/cpu/README.md",
  "url": "cpu",
  "version": "0.2.0",
  "arch": null,
  "public": false,
  "sharable": "singleton",
  "requiredServices": [],
  "userInput": [
    { "name": "CPU_PERIOD", "label": "seconds between update", "type": "int", "defaultValue": "60" },
    { "name": "CPU_INTERVAL", "label": "seconds between cpu testing", "type": "int", "defaultValue": "1" },
    { "name": "SERVICE_LOG_LEVEL", "label": "specify logging level", "type": "string", "defaultValue": "info" }
  ],
  "deployment": {
    "services": {
      "cpu": {
        "environment": [
          "SERVICE_LABEL=cpu",
          "SERVICE_VERSION=0.2.0"
        ],
        "image": null,
        "privileged": true,
        "binds": [],
        "devices": [],
        "specific_ports": []
      }
    }
  },
  "tmpfs": {
    "size": 2048000
  }
}
