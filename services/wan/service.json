{
  "org": "${HZN_ORG_ID}",
  "label": "wan",
  "description": "Provide wide-area-network (WAN) information",
  "documentation": "https://github.com/dcmartin/open-horizon/tree/master/services/wan/README.md",
  "url": "com.github.dcmartin.open-horizon.wan",
  "version": "0.2.0",
  "arch": null,
  "public": false,
  "sharable": "singleton",
  "requiredServices": [],
  "userInput": [
    { "name": "WAN_PERIOD", "label": "seconds between update", "type": "int", "defaultValue": "1800" },
    { "name": "SERVICE_LOG_LEVEL", "label": "specify logging level", "type": "string", "defaultValue": "info" }
  ],
  "deployment": {
    "services": {
      "wan": {
        "environment": [
          "SERVICE_LABEL=wan",
          "SERVICE_VERSION=0.2.0"
        ],
        "specific_ports": [],
        "image": null,
        "privileged": true
      }
    }
  },
  "tmpfs": {
    "size": 2048000
  }
}
