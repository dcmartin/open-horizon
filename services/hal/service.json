{
  "org": "${HZN_ORG_ID}",
  "label": "hal",
  "description": "Provides hardware abstraction layer as service",
  "documentation": "https://github.com/dcmartin/open-horizon/tree/master/services/hal/README.md",
  "url": "com.github.dcmartin.open-horizon.hal",
  "version": "0.2.0",
  "arch": null,
  "public": false,
  "sharable": "singleton",
  "requiredServices": [],
  "userInput": [
    { "name": "HAL_PERIOD", "label": "seconds between updates", "type": "int", "defaultValue": "60" },
    { "name": "SERVICE_LOG_LEVEL", "label": "specify logging level", "type": "string", "defaultValue": "info" }
  ],
  "deployment": {
    "services": {
      "hal": {
        "environment": [
          "SERVICE_LABEL=hal",
          "SERVICE_VERSION=0.2.0"
        ],
        "image": null,
        "specific_ports": [],
        "privileged": true
      }
    }
  },
  "tmpfs": {
    "size": 2048000
  }
}
